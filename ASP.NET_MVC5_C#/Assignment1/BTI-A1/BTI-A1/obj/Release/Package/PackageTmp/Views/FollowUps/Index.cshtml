@model IEnumerable<BTI_A1.Controllers.FollowUpBaseWithSuggestion>

@{
    ViewBag.Title = "Follow Up List";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Add New Follow Up", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Timestamp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
   
        <th>
            @Html.DisplayNameFor(model => model.Suggestion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Timestamp)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
  
        <td>
            @Html.DisplayFor(modelItem => item.Suggestion.Title)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
