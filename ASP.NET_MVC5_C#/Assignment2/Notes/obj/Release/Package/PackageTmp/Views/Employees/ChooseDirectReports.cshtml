@model Notes.Controllers.EmployeeDirectReportsForm


<h2>Choose employees who report to me</h2>
<h4>Select one or more employees, and click the Save button</h4>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h5>Employees who do not yet have a manager</h5>
        <hr />
        <!--CheckBox-->
        <div class="form-group">
            <div class="col-md-10">
                @{
    foreach (var item in Model.Employees)
    {
        <div class="checkbox">
                <label>
                    <input type="checkbox" name="EmployeeIds" value="@item.Value">@item.Text</label>
                </div>
    }
                }
            </div>
        </div>
        <!--checkboxend-->

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Details", "Details", new { id = Model.Id })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
